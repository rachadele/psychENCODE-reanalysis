conda.enabled = true

params.outdir = "$projectDir/results"
params.from_gemma = true
params.study_names = "$projectDir/shortnames.txt"
params.h5ad_files = "/space/grp/rschwartz/rschwartz/get_gemma_data.nf/psychEncode_author_false_sample_split_false/homo_sapiens"
params.gemma_meta_dir = "$projectDir/gemma/metadata"
params.author_results = "/space/grp/rschwartz/rschwartz/psychENCODE-reanalysis/source_data/*csv"

process {
  cache = 'standard'  // Options: 'standard' (default), 'deep', 'lenient', or 'false'
  executor = 'slurm'
  clusterOptions = '-C thrd64 --cpus-per-task=4'

}
executor {
  queueSize = 90 
}

nextflow {
  clean {
    afterRun = true  // Default is false; set to true to clean up automatically
  }
}

profiles {
  conda {
    conda.enabled = true
  }
}
